<!-- res/drawable/flame_gradient.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base gradient with warm colors resembling flame -->
    <shape android:shape="rectangle">
        <gradient
            android:startColor="#FF4500"
        android:centerColor="#FF8C00"
        android:endColor="#FFFF00"
        android:angle="90" />
    </shape>

    <!-- Optional: subtle flicker effect with semi-transparent shapes -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#33FF7F00" /> <!-- translucent orange -->
            <size android:width="200dp" android:height="200dp"/>
            <corners android:radius="100dp" />
        </shape>
    </item>

</layer-list>
