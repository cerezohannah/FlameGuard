<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Back"
            android:src="@drawable/backk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Contacts Title -->
        <TextView
            android:id="@+id/contactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Contacts"
            android:textColor="#F3F4F6"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Important Note Title -->
        <TextView
            android:id="@+id/importantNoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Important Note"
            android:textColor="#F3F4F6"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contactsTitle" />

        <!-- Important Note Body -->
        <androidx.cardview.widget.CardView
            android:id="@+id/importantNoteCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#212121"
            app:layout_constraintTop_toBottomOf="@id/importantNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <TextView
                android:id="@+id/importantNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="Stay calm and act quickly to ensure your safety and the safety of your family. Alert everyone in the house and help those who may need assistance. Use the safest and nearest exit, and avoid going back inside once youâ€™re out. Call emergency services immediately and clearly share your location."
                android:textColor="#F3F4F6"
                android:textSize="14sp" />
        </androidx.cardview.widget.CardView>

        <!-- Emergency Contacts Title -->
        <TextView
            android:id="@+id/emergencyContactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Emergency Contacts"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#F3F4F6"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/importantNoteCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contact Box 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintTop_toBottomOf="@id/emergencyContactsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/fireman" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/contactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BFP Hotline"
                        android:textStyle="bold"
                        android:textColor="#F3F4F6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/contactDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="542-7080 / 0917-186-1611"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Box 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintTop_toBottomOf="@id/contactBox1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/circle_bg"
                    android:scaleType="centerCrop"
                    android:src="@drawable/girl" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical">

                    <TextView
                        android:id="@+id/contactNamee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BFP Hotline"
                        android:textStyle="bold"
                        android:textColor="#F3F4F6"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/contactDistancee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0917-186-1611"
                        android:textColor="#9CA3AF"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
