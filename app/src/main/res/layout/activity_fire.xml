<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Back"
            android:src="@drawable/backk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/contactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Fire Safety"
            android:textColor="#1C1C1E"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Important Note Title -->
        <TextView
            android:id="@+id/importantNoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Important Note!"
            android:textColor="#1C1C1E"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/contactsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Important Note Content -->
        <LinearLayout
            android:id="@+id/importantNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#C0C0C0"
            android:padding="16dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/importantNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/noteIcon"
                android:layout_width="125dp"
                android:layout_height="136dp"
                android:layout_marginEnd="12dp"
                android:contentDescription="Warning Icon"
                android:src="@drawable/safety" />

            <TextView
                android:id="@+id/noteText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/note_text"
                android:textColor="#000"
                android:textSize="14sp"
                android:lineSpacingExtra="6dp" />
        </LinearLayout>

        <!-- Emergency Contacts Title -->
        <TextView
            android:id="@+id/emergencyContactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First thing to do"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#1C1C1E"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/importantNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contact Box 1 -->
        <LinearLayout
            android:id="@+id/contactBox1"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/contact_box_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emergencyContactsTitle">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="127dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/run" />

            <TextView
                android:id="@+id/tipText"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:lineSpacingExtra="6dp"
                android:text="@string/tips_text"
                android:textColor="#2E2E4B"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Contact Box 2 -->
        <LinearLayout
            android:id="@+id/contactBox2"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/contact_box_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/contactBox1"
            app:layout_constraintTop_toTopOf="@id/contactBox1">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="127dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/candle" />

            <TextView
                android:id="@+id/tipText2"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Keep an eye on the burning candles"
                android:textColor="#2E2E4B"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Contact Box 3 -->

        <LinearLayout
            android:id="@+id/contactBox3"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/contact_box_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintTop_toBottomOf="@id/contactBox1"
            app:layout_constraintStart_toStartOf="parent">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="127dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/matches" />

            <TextView
                android:id="@+id/tipText3"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Keep matches and lighters away from children"
                android:textColor="#2E2E4B"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contactBox4"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginStart="36dp"
            android:background="@drawable/contact_box_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp"
            app:layout_constraintStart_toEndOf="@id/contactBox3"
            app:layout_constraintTop_toTopOf="@id/contactBox3">

            <ImageView
                android:layout_width="133dp"
                android:layout_height="127dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_bg"
                android:scaleType="centerCrop"
                android:src="@drawable/electric" />

            <TextView
                android:id="@+id/tipText4"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="6dp"
                android:text="Avoid electrical overload"
                android:textColor="#2E2E4B"
                android:textSize="14sp" />
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
