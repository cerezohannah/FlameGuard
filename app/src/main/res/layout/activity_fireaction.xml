<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1C1C"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:contentDescription="Back"
            android:src="@drawable/backk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Title -->
        <TextView
            android:id="@+id/contactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="Fire Safety"
            android:textColor="#F3F4F6"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Important Note Title -->
        <TextView
            android:id="@+id/importantNoteTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Important Note!"
            android:textColor="#F3F4F6"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/contactsTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Important Note Content -->
        <androidx.cardview.widget.CardView
            android:id="@+id/importantNote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#212121"
            app:layout_constraintTop_toBottomOf="@id/importantNoteTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp">
                <ImageView
                    android:id="@+id/noteIcon"
                    android:layout_width="125dp"
                    android:layout_height="136dp"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Warning Icon"
                    android:src="@drawable/safety"
                   />
                <TextView
                    android:id="@+id/noteText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/note_text"
                    android:textColor="#F3F4F6"
                    android:textSize="14sp"
                    android:lineSpacingExtra="6dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Emergency Contacts Title -->
        <TextView
            android:id="@+id/emergencyContactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First thing to do"
            android:textStyle="bold"
            android:textSize="26sp"
            android:textColor="#F3F4F6"
            android:textAlignment="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintTop_toBottomOf="@id/importantNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Contact Box 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox1"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/emergencyContactsTitle">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="127dp"
                    android:layout_marginBottom="8dp"
                    android:background="#424242"
                    android:scaleType="centerCrop"
                    android:src="@drawable/run" />
                <TextView
                    android:id="@+id/tipText"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingExtra="6dp"
                    android:text="@string/tips_text"
                    android:textColor="#F3F4F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Box 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox2"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintStart_toEndOf="@id/contactBox1"
            app:layout_constraintTop_toTopOf="@id/contactBox1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="127dp"
                    android:layout_marginBottom="8dp"
                    android:background="#424242"
                    android:scaleType="centerCrop"
                    android:src="@drawable/alarm" />
                <TextView
                    android:id="@+id/tipText2"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Alert others by trigerring the alarm"
                    android:textColor="#F3F4F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Contact Box 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox3"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintTop_toBottomOf="@id/contactBox1"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="127dp"
                    android:layout_marginBottom="8dp"
                    android:background="#424242"
                    android:scaleType="centerCrop"
                    android:src="@drawable/call" />
                <TextView
                    android:id="@+id/tipText3"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Call for help or dial emergency services "
                    android:textColor="#F3F4F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox4"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintStart_toEndOf="@id/contactBox3"
            app:layout_constraintTop_toTopOf="@id/contactBox3">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="127dp"
                    android:layout_marginBottom="8dp"
                    android:background="#424242"
                    android:scaleType="centerCrop"
                    android:src="@drawable/evacute" />
                <TextView
                    android:id="@+id/tipText4"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Use the nearest exit; avoid elevators"
                    android:textColor="#F3F4F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox5"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintTop_toBottomOf="@id/contactBox3"
            app:layout_constraintStart_toStartOf="parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="127dp"
                    android:layout_marginBottom="8dp"
                    android:background="#424242"
                    android:scaleType="centerCrop"
                    android:src="@drawable/low" />
                <TextView
                    android:id="@+id/tipText5"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Crawl under smoke to avoid inhalation."
                    android:textColor="#F3F4F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/contactBox6"
            android:layout_width="162dp"
            android:layout_height="224dp"
            android:layout_marginStart="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#2A2A2A"
            app:layout_constraintStart_toEndOf="@id/contactBox5"
            app:layout_constraintTop_toTopOf="@id/contactBox5">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="12dp">
                <ImageView
                    android:layout_width="133dp"
                    android:layout_height="127dp"
                    android:layout_marginBottom="8dp"
                    android:background="#424242"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cigarette" />
                <TextView
                    android:id="@+id/tipText6"
                    android:layout_width="138dp"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="6dp"
                    android:text="Dispose cigarette butss properly"
                    android:textColor="#F3F4F6"
                    android:textSize="14sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
